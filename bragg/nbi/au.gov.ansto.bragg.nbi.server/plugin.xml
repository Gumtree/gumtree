<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="nsHttpcontext"
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="ns">
         <resource-mapping
               path="/ns/rest">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="statisticRestlet">
         <resource-mapping
               path="/st/rest">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="jythonRestlet">
         <resource-mapping
               path="/jython/rest">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         id="nsRestlet"
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/ns/rest"
            class="org.restlet.ext.servlet.ServerServlet"
            httpcontextId="ns">
         <init-param
               name="org.restlet.application"
               value="au.gov.ansto.bragg.nbi.server.restlet.NSRestletApplication">
         </init-param>
      </servlet>
      <servlet
            alias="/st/rest"
            class="org.restlet.ext.servlet.ServerServlet"
            httpcontextId="statisticRestlet">
         <init-param
               name="org.restlet.application"
               value="au.gov.ansto.bragg.nbi.server.restlet.StatisticRestletApplication">
         </init-param>
      </servlet>
      <servlet
            alias="/jython/rest"
            class="org.restlet.ext.servlet.ServerServlet"
            httpcontextId="jythonRestlet">
         <init-param
               name="org.restlet.application"
               value="au.gov.ansto.bragg.nbi.server.restlet.JythonRestletApplication">
         </init-param>
      </servlet>
   </extension>


</plugin>
