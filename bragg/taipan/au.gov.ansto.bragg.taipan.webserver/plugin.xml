<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="taipanHttpcontext"
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="taipan">
         <resource-mapping
               path="/status/taipan/rest">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         id="taipanRestlet"
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/status/taipan/rest"
            class="org.restlet.ext.servlet.ServerServlet"
            httpcontextId="taipan">
         <init-param
               name="org.restlet.application"
               value="au.gov.ansto.bragg.taipan.webserver.restlet.TaipanRestletApplication">
         </init-param>
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/status"
            base-name="/WebContent/taipan.html">
      </resource>
      <resource
            alias="/status/taipan.html"
            base-name="/WebContent/taipan.html">
      </resource>
      <resource
            alias="/status/index.html"
            base-name="/WebContent/index.html">
      </resource>
      <resource
            alias="/status/taipan.swf"
            base-name="/WebContent/taipan.swf">
      </resource>               
      <resource
            alias="/status/js/instrumentsetup.js"
            base-name="/WebContent/instrumentsetup.js">
      </resource>
      <resource
            alias="/user/js/instrumentsetup.js"
            base-name="/WebContent/instrumentsetup.js">
      </resource>
      <resource
            alias="/user/doc/js/instrumentsetup.js"
            base-name="/WebContent/instrumentsetup.js">
      </resource>
   </extension>
</plugin>
