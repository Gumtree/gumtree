<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.startup">
      <startup
            class="au.gov.ansto.bragg.koala.ui.KoalaWorkbenchSetup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
     <category
           id="au.gov.ansto.bragg.koala.ui"
           name="Koala Views">
     </category>
      <view
            allowMultiple="false"
            category="au.gov.ansto.bragg.koala.ui"
            class="au.gov.ansto.bragg.koala.ui.KoalaWorkflowView"
            icon="icons/workflow.gif"
            id="au.gov.ansto.bragg.koala.ui.KoalaWorkflowView"
            name="Koala Workflow Control">
      </view>
      <view
            allowMultiple="false"
            category="au.gov.ansto.bragg.koala.ui"
            class="au.gov.ansto.bragg.koala.ui.ChemistryWorkflowView"
            icon="icons/workflow.gif"
            id="au.gov.ansto.bragg.koala.ui.ChemistryWorkflowView"
            name="Chemistry Workflow Control">
      </view>
      <view
            allowMultiple="true"
            category="au.gov.ansto.bragg.koala.ui"
            class="au.gov.ansto.bragg.koala.ui.vlcj.VlcjView"
            icon="icons/workflow.gif"
            id="au.gov.ansto.bragg.koala.ui.vlcj.VlcjView"
            name="Camera View">
      </view>
      <view
            allowMultiple="true"
            category="au.gov.ansto.bragg.koala.ui"
            class="au.gov.ansto.bragg.koala.ui.parts.KoalaMainView"
            icon="icons/workflow.gif"
            id="au.gov.ansto.bragg.koala.ui.KoalaMainView"
            name="Koala Control Panel">
      </view>
      <view
            allowMultiple="true"
            category="au.gov.ansto.bragg.koala.ui"
            class="org.gumtree.ui.cruise.support.CruisePanelView"
            icon="icons/weather_16.png"
            id="org.gumtree.ui.cruise.CruisePanelView"
            name="Sample Environment">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="au.gov.ansto.bragg.koala.ui.KoalaWorkflowPerspective"
            icon="icons/exp_per.gif"
            id="au.gov.ansto.bragg.koala.ui.KoalaWorkflowPerspective"
            name="Koala Workflow"/>
      <perspective
            class="au.gov.ansto.bragg.koala.ui.ChemistryWorkflowPerspective"
            icon="icons/exp_per.gif"
            id="au.gov.ansto.bragg.koala.ui.ChemistryWorkflowPerspective"
            name="Chemistry Workflow"/>
      <perspective
            class="au.gov.ansto.bragg.koala.ui.parts.KoalaMainPerspective"
            icon="icons/exp_per.gif"
            id="au.gov.ansto.bragg.koala.ui.KoalaMainPerspective"
            name="Koala Control"/>
   </extension>
</plugin>
