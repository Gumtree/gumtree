<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.codehaus.gumtree</groupId>
	<artifactId>org.gumtree.data.parent</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<gumtree.groupId>org.codehaus.gumtree</gumtree.groupId>
		<cdma.version>3.0.0-SNAPSHOT</cdma.version>
		<tycho.groupId>org.eclipse.tycho</tycho.groupId>
		<tycho.version>0.14.1</tycho.version>
		<maven.javadoc.version>2.8</maven.javadoc.version>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
		<enableEmmaReport>false</enableEmmaReport>
		<skipTests>false</skipTests>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>${tycho.groupId}</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>${tycho.groupId}</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<resolver>p2</resolver>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>${tycho.groupId}</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<strictVersions>true</strictVersions>
					<archiveSite>true</archiveSite>
				</configuration>
			</plugin>
			<plugin>
				<groupId>${tycho.groupId}</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<skip>${skipTests}</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>${maven.javadoc.version}</version>
				<configuration>
					<failOnError>false</failOnError>
					<excludePackageNames>*.internal.*:*.internal*</excludePackageNames>
					<minmemory>128m</minmemory>
					<maxmemory>512m</maxmemory>
					<links>
						<link>http://dist.codehaus.org/gumtree/files/javadoc/eclipse/3.6/</link>
						<link>http://junit.sourceforge.net/javadoc/</link>
						<link>http://www.slf4j.org/api/</link>
					</links>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>${tycho.groupId}</groupId>
				<artifactId>tycho-surefire</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<name>Common Data Model Parent POM</name>
	<description>Common Data Model Parent Project Metadata</description>
	<url>http://gumtree.codehaus.org</url>
	<licenses>
		<license>
			<name>Eclipse Public License - v 1.0</name>
			<url>http://www.eclipse.org/org/documents/epl-v10.php</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>nxi</id>
			<name>Norman Xong</name>
			<organization>Australian Nuclear Science and Technology Organisation</organization>
			<organizationUrl>www.ansto.gov.au</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>10</timezone>
		</developer>
		<developer>
			<id>rodriguez</id>
			<name>rodriguez</name>
			<email>clement.rodriguez@synchrotron-soleil.fr</email>
			<url>http://www.synchrotron-soleil.fr</url>
			<organization>Synchrotron Soleil</organization>
			<organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>1</timezone>
		</developer>
	</developers>

	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.codehaus.org/browse/GUMTREE</url>
	</issueManagement>
	<mailingLists>
		<mailingList>
			<name>Common Data Model API Decision</name>
			<archive>http://groups.google.com/group/common-data-model</archive>
		</mailingList>
	</mailingLists>
	<repositories>
		<repository>
			<id>eclipse_indigo</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/indigo</url>
		</repository>
		<repository>
			<id>gumtree_bundles</id>
			<layout>p2</layout>
			<url>http://dist.codehaus.org/gumtree/sites/bundles</url>
		</repository>
		<repository>
			<id>codehaus.snapshots</id>
			<name>Codehaus Snapshots</name>
			<layout>default</layout>
			<snapshots>
				<enabled>true</enabled>
				<checksumPolicy>ignore</checksumPolicy>
				<updatePolicy>daily</updatePolicy>
			</snapshots>
			<url>http://snapshots.repository.codehaus.org/</url>
		</repository>
	</repositories>
	<profiles>
		<profile>
			<id>ansto-build</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>soleil-build</id>
		</profile>
	</profiles>

</project>
